    else
        LP_BATT=
    fi
    if _lp_wifi_signal_strength_color; then
        LP_WIFI="$lp_wifi_signal_strength_color "
    else
        LP_WIFI=
    fi

    if _lp_time_color; then
        LP_TIME="$lp_time_color "
    elif _lp_analog_time_color; then
